<div class="col-lg-5 article ">
  <div class="row tag">
    <div class="item-content-block tags">
      <a href="#"><%= t "add-tag-here" %></a>
      <%= image_tag Faker::LoremPixel.image("300x300"), class:"img-responsive" %>
    </div>
  </div>
  <div class ="row">
    <h3 class ="text-center"><%= link_to post.title, "#" %></h3>
  </div>
  <div class="row">
    <p class="content">
      <%= truncate post.content, length: Settings.post.length %>
    </p>
  </div>
</div>
